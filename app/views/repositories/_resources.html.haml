%section{id: id, class: 'clearfix'}
  %a{href: show_resources_path(owner: @repo.owner, name: @repo.name, resource: id)}
    %h2= title
  - resources.each do |r|
    %p
      = link_to(r.title, r.url)
      = link_to_vote(r, :up)
      = r.votes_count
      = link_to_vote(r, :down)
      %br
      = r.description
%hr
