%div= render "shared/search_form"

%div.home
  %h4.title Popular repositories
  %ul.repo-list
    - @popular_repos.each do |r|
      %li= link_to r.name, show_repo_path(owner: r.owner, name: r.name)
  %h4.title Recently visited repositories
  %ul.repo-list
    - @repos.each do |r|
      %li= link_to r.name, show_repo_path(owner: r.owner, name: r.name)
